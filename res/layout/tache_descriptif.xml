<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
     
	<LinearLayout
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/bleu" >
	    
	    <ImageView
	        android:layout_weight="1"
	   		android:layout_width="0dp"
	    	android:layout_height="fill_parent" 
	    	android:layout_gravity="clip_vertical"
	    	android:id="@+id/retour"
	    	android:contentDescription="@string/text"
	    	android:src="@drawable/icone_retour" />
	    
	    <TextView
	        android:layout_weight="2"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
	        android:layout_margin="8dp"
	        android:textColor="@color/blanc"
	        android:id="@+id/titre" 
	        android:textSize="25sp"
	        android:text="@string/titre" />	        
			
			<ImageView
	        android:layout_weight="1"
	   		android:layout_width="0dp"
	    	android:layout_height="fill_parent" 
	    	android:layout_gravity="clip_vertical"
	    	android:id="@+id/modification"
	    	android:contentDescription="@string/text"
	    	android:src="@drawable/icone_modif" />
			
			<ImageView
	        android:layout_weight="1"
	   		android:layout_width="0dp"
	    	android:layout_height="fill_parent" 
	    	android:layout_gravity="clip_vertical"
	    	android:id="@+id/corbeille"
	    	android:contentDescription="@string/text"
	    	android:src="@drawable/icone_corbeille" />
	    
    </LinearLayout>
    
    <TextView
        android:id="@+id/nom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/text"
        android:textSize="25sp"/>


    <TextView
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:text="@string/text" 
        android:id="@+id/description"	
        android:textSize="20sp"
        android:paddingTop="50dp" />
    
    <TextView
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:text="@string/text" 
        android:id="@+id/descriptionr"/>
    
    <TextView
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:text="@string/text" 
        android:gravity="center"
        android:id="@+id/date"	
        android:textSize="20sp"
        android:paddingTop="20dp"/>
    
    <TextView
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:text="@string/text"
        android:gravity="center" 
        android:id="@+id/dater"/>
    
  <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
  		android:focusableInTouchMode="true" >
    
    <TextView
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="@string/text" 
        android:id="@+id/etat"	
        android:textSize="20sp"
        android:paddingTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="@string/text" 
        android:id="@+id/etatr"	/>
    
    </LinearLayout>
     <TextView
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:text="@string/text" 
        android:gravity="center"
        android:id="@+id/importancetext"	
        android:textSize="25sp"/>
     <RatingBar
        android:id="@+id/importance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" 
        android:isIndicator="true"/>
    



</LinearLayout>
