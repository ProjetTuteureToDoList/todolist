<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
     
	<LinearLayout
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/bleu" >
	    
	    <ImageView
	        android:layout_weight="1"
	   		android:layout_width="0dp"
	    	android:layout_height="fill_parent" 
	    	android:layout_gravity="clip_vertical"
	    	android:id="@+id/retour"
	    	android:contentDescription="@string/text"
	    	android:src="@drawable/icone_retour" />
	    
	    <TextView
	        android:layout_weight="2"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
	        android:layout_margin="8dp"
	        android:textColor="@color/blanc"
	        android:id="@+id/titre" 
	        android:textSize="25sp"
	        android:text="@string/titre" />	        
	    
    </LinearLayout>

	<ScrollView
	    android:id="@+id/scrollaat"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical" >

	        <EditText
	            android:lines="1"
	            android:inputType="text"
	            android:id="@+id/nomDeTache"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:text="Nom de la Tâche" />

	        <TextView
	            android:id="@+id/dateRappelTache"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="Date de rappel de la tâche:" />

	        <DatePicker
	            android:id="@+id/Date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" />

	        <TextView
	            android:id="@+id/importanceTacheText"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="Importance de la tâche (1 à 10)" />

	        <RatingBar
	            android:id="@+id/importanceTache"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" />

	        <EditText
	            android:id="@+id/detailTache"
	            android:inputType="text"
	            android:layout_width="fill_parent"
	            android:layout_height="102dp"
	            android:ems="10"
	            android:gravity="top|left"
	            android:text="Details de la tâche" >

	            <requestFocus />
	        </EditText>

	        <TextView
	            android:id="@+id/listeTagstext"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="Liste des tags" />

	        <Button
	            android:id="@+id/Creer"
	            android:layout_width="180dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="Créer" />

	    </LinearLayout>

	</ScrollView>

</LinearLayout>
